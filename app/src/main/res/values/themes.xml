<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Experimental" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azulNuevo</item>
        <item name="colorPrimaryVariant">@color/azulNuevo</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">20dp</item>
        <!-- <item name="android:typeface">sans-serif-condensed-light</item> -->
        <item name="android:background">@drawable/top_perfil_usuario</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/viga</item>
    </style>

    <style name="TextViewStyle2" parent="android:Widget.TextView">
        <item name="android:textSize">18dp</item>
        <!-- <item name="android:typeface">sans-serif-condensed-light</item> -->
        <item name="android:textColor">@color/principal1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BotonInicioSesion">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_login</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:elevation">2dp</item>
    </style>


    <style name="MyCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:animateLayoutChanges">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="fotoPerfil">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/circular_background</item>
    </style>

    <style name="Theme.Experimental2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/azulNuevo</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


</resources>